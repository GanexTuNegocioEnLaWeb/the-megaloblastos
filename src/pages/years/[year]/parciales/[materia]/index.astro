---
// import CardDocente from "@/components/UI/CardDocente.astro";
import CardParcial from "@/components/UI/CardParcial.astro";
import HeaderCards from "@/components/UI/HeaderCards.astro";
import Layout from "@/layouts/Layout.astro";
// import { materias} from "@/consts/db";
import BtnBack from "@/components/BtnBack.astro";

// props
const { materia, docente } = Astro.params;
// const materiaFiltered = materias.filter((m) => m.name === materia);
---

<Layout title={`${materia}`}>
    <section class="w-[80dvw] mx-auto max-w-2xl">
        <HeaderCards text1="Parciales de" text2={materia} />
        <BtnBack />
        <ul class="space-y-4 pt-5 pb-10">
            {[1,2,3].map((item) => <CardParcial item={item} docente={docente} isMultigrupo={true} materia={materia} />)}
             <!-- Aqui falta componetizar -->
            { 
                materia === "Cirugía 2" && (
                <li class="py-6 px-8 bg-white dark:bg-neutral-800 shadow-md rounded-md">
                    <h3 class="text-xl font-bold uppercase text-neutral-700 dark:text-neutral-50 border-b pb-4">Viruez Soleto Erwin</h3>
                    <p class="py-2 font-medium text-neutral-600 dark:text-neutral-300">N° 64</p>
                    <a class="text-primary underline" href={`/years/4/materias/Cirugía 2/parciales/Viruez Soleto Erwin`}>Parciales</a>
                </li>
                )
            }
            { 
                materia === "Cirugía 3" && (
                <li class="py-6 px-8 bg-white dark:bg-neutral-800 shadow-md rounded-md">
                    <h3 class="text-xl font-bold uppercase text-neutral-700 dark:text-neutral-50 border-b pb-4">Jorge Fernando Aparicio</h3>
                    <p class="py-2 font-medium text-neutral-600 dark:text-neutral-300">N° 91</p>
                    <a class="text-primary underline" href={`/years/4/materias/Cirugía 2/parciales/Jorge Fernando Aparicio`}>Parciales</a>
                </li>
                )
            }
        </ul>
    </section>
</Layout>